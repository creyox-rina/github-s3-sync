<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="cr_inh_view_move_form" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="after">
               <field name="is_am_sale_installment" invisible="1"/> 
            </xpath>
            <xpath expr="//notebook//page[last()]" position="after">
                <page string="Installments" name="installments" groups="cr_payment_installment.group_enable_installments">
                        <button name="compute_installment" string="Compute Installment" type="object" class="oe_highlight"/>
                        <button></button>
                        <button name="btn_open_partial_payment" string="Partial Payment" type="object" class="oe_highlight" invisible="state != 'posted'"/>
                    <group>
                        <group>
                            <field name="am_month_tenure" readonly="state != 'draft'"/>
                            <field name="am_tenure_amount" invisible="1"/>
                            <field name="am_down_payment_amount" invisible="1" readonly="state != 'draft'"/>
                        </group>
                        <group>
                            <field name="am_installment_amount" readonly="state != 'draft'"/>
                            <field name="am_payable_amount" invisible="1" readonly="state != 'draft'"/>
                            <field name="am_second_payment_date" invisible="1" readonly="state != 'draft'"/>
                        </group>
                    </group>
                    <field name="am_installment_line_ids">
                        <list editable="bottom" string="Installments" create="true" edit="true">
                            <field name="index"/>
                            <field name="description"/>
                            <field name="payment_date"/>
                            <field name="amount" sum="Total Amount"/>
                            <field name="state" readonly="1"/>
                            <button name="make_payment" type="object" string="Pay" class="oe_highlight" invisible="parent.state != 'posted' or state == 'paid' or parent.payment_state == 'paid'"/>
                        </list>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>