<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="auto_cleanup_default_date" model="auto.clean">
        <field name="notification_cleanup">True</field>
        <field name="notification_no">0</field>
    </record>

    <record id="auto_cleanup_cron" model="ir.cron">
        <field name="name">Auto Cleanup</field>
        <field name="model_id" ref="model_auto_clean"/>
        <field name="state">code</field>
        <field name="user_id" ref="base.user_root"/>
        <field name="code">model._auto_cleanup()</field>
        <field name="interval_number">7</field>
        <field name="interval_type">days</field>
        <field name="active" eval="True"/>
    </record>
</odoo>
